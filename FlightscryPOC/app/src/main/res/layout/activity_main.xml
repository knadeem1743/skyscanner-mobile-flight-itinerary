<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="large"
        app:focused="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight information card" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight Number: FA30015" />

            <net.skyscanner.backpack.card.BpkCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:focused="true"
                app:cornerStyle="small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Departure card" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Airport Code: 303" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Departure time: 3:00" />

                    <net.skyscanner.backpack.card.BpkCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:focused="true"
                        app:cornerStyle="small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <net.skyscanner.backpack.text.BpkText
                                style="@style/bpkTextHeading1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Arrival card" />

                            <net.skyscanner.backpack.text.BpkText
                                style="@style/bpkTextHeading2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Airport code: 471" />

                            <net.skyscanner.backpack.text.BpkText
                                style="@style/bpkTextHeading2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Arrival time: 11:00" />
                        </LinearLayout>

                    </net.skyscanner.backpack.card.BpkCardView>
                </LinearLayout>

            </net.skyscanner.backpack.card.BpkCardView>
        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>


</androidx.constraintlayout.widget.ConstraintLayout>